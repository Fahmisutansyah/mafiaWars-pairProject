<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>

<body background="/images/home.jpg" style="background-size: cover; position:relative">
    <%- include('../partials/navbar') %>
    <div class="container" style="margin-top: 50px">
        <div class="row">
            <div class='col s6'>
                <div class='row'>
                    <div class="col s4" >
                        <div class="row" style="background-color:grey;border-radius: 40px;">
                            <img src="<%= player.image %>" style="height: 100%; width: 100%; object-fit: contain'">
                        </div>
                        <div class="row center-align" style="margin-bottom:0px">
                            <h4 style="color: white"><%= player.username %></h4>
                        </div>
                        <div class="row center-align">
                            <div class="col s4">
                                <img src='/images/money.png' style="height: 100%; width: 100%;">
                            </div>
                            <div class="col s8">
                                <h5 style="color:#FFD700; margin-top: 7px"><%= player.money%></h5>
                            </div>
                        </div>
                        <div class="row center-align">
                                <div class="col s4">
                                    <img src='/images/property.png' style="height: 100%;width: 113%;background-color:white;border-radius: 34px;">
                                </div>
                                <div class="col s8">
                                    <h5 style="color:white; margin-top: 7px"><%= property.length%></h5>
                                </div>
                            </div>
                    </div>
                    <div class="col s8" style="margin-top: 14px;padding-left: 52px; ">
                        <div class="row center-align">
                            <h5 style="color:white">INVERTORIES</h5>
                        </div>
                        <div class="row center-align">
                                <% items.forEach(element=>{ %>
                                    <%if(element.type === 'weapon'){ %>
                                        <div class="col s4">
                                        <img src='<%= element.img %>' style="height: 100%;width: 93%">
                                        </div>
                                        <div class="col s8">
                                            <div class='row' style="margin-bottom:5px">
                                                <h6 style="color:#D3D3D3;background-color: grey;border-radius: 8px;"><%= element.name %></h6>
                                                    <div class='col s7'>
                                                        <img src="/images/power.png" style="height: 100%;width: 37%;margin-left: 36px;padding-top:10px">
                                                    </div>
                                                    <div class='col s5' style="margin-top: 7px;padding-right: 37px; ">
                                                        <h6 style="color:red"><%= element.power%></h6>
                                                    </div>
                                            </div>
                                        </div>
                                    <% } %>
                                <% }) %>
                        </div>
                        <div class="row center-align">
                                <% items.forEach(element=>{ %>
                                    <%if(element.type === 'shield'){ %>
                                            <div class="col s4">
                                                <img src='<%= element.img %>' style="height: 100%;width: 93%">
                                            </div>
                                            <div class="col s8">
                                                <div class='row' style="margin-bottom:5px">
                                                    <h6 style="color:#D3D3D3;background-color: grey;border-radius: 8px;"><%= element.name %></h6>
                                                        <div class='col s7'>
                                                            <img src="/images/shield.png" style="height: 100%;width: 28%;margin-left: 36px;padding-top:10px">
                                                        </div>
                                                        <div class='col s5' style="margin-top: 6px;padding-right: 39px; ">
                                                            <h6 style="color:red"><%= element.power%></h6>
                                                    </div>
                                                </div>
                                            </div>
                                    <% } %>
                                <% }) %>
                        </div>
                        <div class="row center-align">
                            <a href="/shop"><img src="/images/cart.png" style="height: 100%;width: 16%;margin-left: 36px;"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/script')%>
</body>

</html>